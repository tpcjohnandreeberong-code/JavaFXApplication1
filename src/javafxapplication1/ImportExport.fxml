<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="javafxapplication1.ImportExportController">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Attendance Log Manager" />
<Region HBox.hgrow="ALWAYS" />
<!-- <Button fx:id="importAttendanceLogButton" onAction="#onImportData" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" text="Import Attendance Log" visible="false" /> -->
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</HBox>

<!-- Import Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Import Attendance Log" />
<HBox alignment="CENTER_LEFT" spacing="10.0">
<children>
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="File Format:" />
<ComboBox fx:id="importFileFormat" prefWidth="150.0" promptText="Select Format" style="-fx-background-radius: 6;" />
<Button fx:id="browseFileButton" onAction="#onBrowseImportFile" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Browse File" />
<Button fx:id="previewDataButton" onAction="#onPreviewImportData" style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Preview Data" />
<Button fx:id="importNowButton" onAction="#onImportNow" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Import Now" />
</children>
</HBox>
<Label fx:id="importFileLabel" style="-fx-text-fill: #666; -fx-font-style: italic;" text="No attendance log file selected" />
<ProgressBar fx:id="importProgressBar" prefHeight="20.0" prefWidth="400.0" visible="false" />
<!-- File Loading Progress -->
<VBox fx:id="fileLoadingSection" managed="false" spacing="8.0" style="-fx-alignment: center; -fx-padding: 10;" visible="false">
<children>
<Label fx:id="fileLoadingLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Processing attendance file..." />
<ProgressBar fx:id="fileProgressBar" prefHeight="20.0" prefWidth="400.0" progress="0.0" />
<Label fx:id="fileProgressLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;" text="Reading file..." />
</children>
</VBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>


<!-- Attendance Log Preview Table -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<HBox alignment="CENTER_LEFT" spacing="10.0">
<children>
<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Attendance Log Preview" />
<Region HBox.hgrow="ALWAYS" />
<Button onAction="#onRefreshPreview" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 12;" text="Refresh Data" />
<Button onAction="#onShowStatistics" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 12;" text="Show Statistics" />
</children>
</HBox>
<!-- Search/Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 8; -fx-background-color: #f5f5f5; -fx-background-radius: 6;">
<children>
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Search:" />
<TextField fx:id="searchField" onKeyReleased="#onSearchKeyReleased" prefWidth="200.0" promptText="Search by Name or Account Number..." style="-fx-background-radius: 6;" />
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Filter by Log Type:" />
<ComboBox fx:id="logTypeFilter" onAction="#onFilterChanged" prefWidth="150.0" promptText="All Log Types" style="-fx-background-radius: 6;" />
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Date:" />
<TextField fx:id="dateFilter" onKeyReleased="#onSearchKeyReleased" prefWidth="120.0" promptText="YYYY-MM-DD" style="-fx-background-radius: 6;" />
<Button onAction="#onClearFilters" style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 4 8;" text="Clear Filters" />
</children>
</HBox>
<TableView fx:id="importPreviewTable" prefHeight="300.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colPreview1" prefWidth="200.0" text="Fullname" />
<TableColumn fx:id="colPreview2" prefWidth="120.0" text="Account Number" />
<TableColumn fx:id="colPreview3" prefWidth="160.0" text="Date &amp; Time" />
<TableColumn fx:id="colPreview4" prefWidth="120.0" text="Log Type" />
<TableColumn fx:id="colPreview5" prefWidth="300.0" text="Raw Data" />
<TableColumn fx:id="colPreview6" prefWidth="150.0" text="Status" />
</columns>
</TableView>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

</children>
<padding>
<Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
