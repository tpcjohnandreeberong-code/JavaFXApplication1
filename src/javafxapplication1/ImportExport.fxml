<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.ImportExportController" spacing="16.0" style="-fx-background-color: #f5f5f5;">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Import/Export Manager" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Button text="Import Data" onAction="#onImportData" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
<Button text="Export Data" onAction="#onExportData" style="-fx-background-color: linear-gradient(to right, #1976d2, #42a5f5); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Import Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Import Data" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<HBox alignment="CENTER_LEFT" spacing="10.0">
<children>
<Label text="Data Type:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="importDataType" promptText="Select Data Type" prefWidth="150.0" style="-fx-background-radius: 6;" />
<Label text="File Format:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="importFileFormat" promptText="Select Format" prefWidth="120.0" style="-fx-background-radius: 6;" />
<Button text="Browse File" onAction="#onBrowseImportFile" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button text="Preview Data" onAction="#onPreviewImportData" style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button text="Import Now" onAction="#onImportNow" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
</HBox>
<Label fx:id="importFileLabel" text="No file selected" style="-fx-text-fill: #666; -fx-font-style: italic;" />
<ProgressBar fx:id="importProgressBar" visible="false" prefWidth="400.0" style="-fx-background-radius: 6;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Export Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Export Data" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<HBox alignment="CENTER_LEFT" spacing="10.0">
<children>
<Label text="Data Type:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="exportDataType" promptText="Select Data Type" prefWidth="150.0" style="-fx-background-radius: 6;" />
<Label text="File Format:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="exportFileFormat" promptText="Select Format" prefWidth="120.0" style="-fx-background-radius: 6;" />
<Label text="Department:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="exportDepartmentFilter" promptText="All Departments" prefWidth="150.0" style="-fx-background-radius: 6;" />
<Button text="Export Now" onAction="#onExportNow" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
</HBox>
<Label fx:id="exportStatusLabel" text="Ready to export" style="-fx-text-fill: #666; -fx-font-style: italic;" />
<ProgressBar fx:id="exportProgressBar" visible="false" prefWidth="400.0" style="-fx-background-radius: 6;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Import Preview Table -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label text="Import Preview" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<TableView fx:id="importPreviewTable" prefHeight="200.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colPreview1" text="Employee ID" prefWidth="120.0" />
<TableColumn fx:id="colPreview2" text="Name" prefWidth="200.0" />
<TableColumn fx:id="colPreview3" text="Department" prefWidth="150.0" />
<TableColumn fx:id="colPreview4" text="Position" prefWidth="150.0" />
<TableColumn fx:id="colPreview5" text="Salary" prefWidth="120.0" />
</columns>
</TableView>
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Summary Cards -->
<HBox spacing="16.0" alignment="CENTER_LEFT">
<children>
<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Total Imports" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalImportsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Total Exports" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalExportsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Success Rate" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="successRateLabel" text="100%" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Last Activity" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="lastActivityLabel" text="Today" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>
</children>
</HBox>
</children>
<padding>
<Insets top="16.0" right="16.0" bottom="16.0" left="16.0" />
</padding>
</VBox>
