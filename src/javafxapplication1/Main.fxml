<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1080.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.MainController" style="-fx-background-color: linear-gradient(to bottom right, #2e7d32, #66bb6a);">
<children>
<BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
<top>
<HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-background-color: transparent;">
<children>
<Label text="School Payroll System" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);" />
<Pane HBox.hgrow="ALWAYS" />
<MenuButton text="Admin" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 14px;">
<items>
<MenuItem text="Edit Profile" onAction="#onEditProfile" />
<MenuItem text="Logout" onAction="#onLogout" />
</items>
</MenuButton>
</children>
<padding>
<Insets top="16.0" right="20.0" bottom="0.0" left="20.0" />
</padding>
</HBox>
</top>
<left>
<VBox spacing="6.0" prefWidth="240.0" style="-fx-background-color: rgba(0,0,0,0.12);">
<children>
<Button fx:id="dashboardBtn" text="Dashboard" onAction="#openDashboard" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 16 12 16; -fx-font-weight: bold; -fx-font-size: 15px;" />
<Separator />
<Label text="Employee Management" style="-fx-text-fill: white; -fx-opacity: 0.8; -fx-padding: 8 16 0 16; -fx-font-size: 13px;" />
<Button fx:id="employeeMgmtBtn" text="Employees" onAction="#openEmployeeManagement" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />

<Label text="Payroll" style="-fx-text-fill: white; -fx-opacity: 0.8; -fx-padding: 8 16 0 16; -fx-font-size: 13px;" />
<Button fx:id="payrollProcessingBtn" text="Processing" onAction="#openPayrollProcessing" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="payrollGeneratorBtn" text="Generator" onAction="#openPayrollGenerator" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="reportsBtn" text="Reports" onAction="#openReports" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="importExportBtn" text="Import / Export" onAction="#openImportExport" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />

<Label text="System" style="-fx-text-fill: white; -fx-opacity: 0.8; -fx-padding: 8 16 0 16; -fx-font-size: 13px;" />
<Button fx:id="historyBtn" text="History" onAction="#openHistory" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="securityBtn" text="Security Maintenance" onAction="#openSecurity" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="govRemitBtn" text="Government Remittances" onAction="#openGovernmentRemittances" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
<Button fx:id="userAccessBtn" text="User Access" onAction="#openUserAccess" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 10 16 10 28; -fx-font-size: 14px;" />
</children>
<padding>
<Insets top="16.0" right="6.0" bottom="16.0" left="6.0" />
</padding>
</VBox>
</left>
<center>
<ScrollPane fx:id="contentScroll" fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
<content>
<VBox spacing="16.0">
<children>
<Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
<GridPane hgap="16.0" vgap="16.0">
<columnConstraints>
<ColumnConstraints percentWidth="33.3" />
<ColumnConstraints percentWidth="33.3" />
<ColumnConstraints percentWidth="33.3" />
</columnConstraints>
<rowConstraints>
<RowConstraints vgrow="NEVER" />
<RowConstraints vgrow="NEVER" />
</rowConstraints>
<children>
<VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 10, 0.2, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="0">
<children>
<Label text="Employees" style="-fx-text-fill: #1b5e20; -fx-font-weight: bold;" />
<Label text="Total: 0" />
</children>
</VBox>

<VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 10, 0.2, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="0">
<children>
<Label text="Payrolls" style="-fx-text-fill: #1b5e20; -fx-font-weight: bold;" />
<Label text="This period: 0" />
</children>
</VBox>

<VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 10, 0.2, 0, 2);" GridPane.columnIndex="2" GridPane.rowIndex="0">
<children>
<Label text="Logs" style="-fx-text-fill: #1b5e20; -fx-font-weight: bold;" />
<Label text="Recent activities..." />
</children>
</VBox>
</children>
</GridPane>
</children>
<padding>
<Insets top="12.0" right="20.0" bottom="20.0" left="20.0" />
</padding>
</VBox>
</content>
<padding>
<Insets top="0.0" right="0.0" bottom="0.0" left="0.0" />
</padding>
</ScrollPane>
</center>
<padding>
<Insets top="0.0" right="0.0" bottom="20.0" left="0.0" />
</padding>
</BorderPane>
</children>
</AnchorPane>
