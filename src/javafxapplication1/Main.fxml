<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: linear-gradient(to bottom right, #2e7d32, #66bb6a);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="javafxapplication1.MainController">
<children>
<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
<top>
<HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: transparent;">
<children>
<ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
<image>
<Image url="@images/tpc.png" />
</image>
</ImageView>
<Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);" text="TPC PAYROLL MANAGEMENT SYSTEM" />
<Pane HBox.hgrow="ALWAYS" />
<MenuButton fx:id="userMenuButton" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 16px;" text="Admin">
<items>
<MenuItem onAction="#onEditProfile" text="Edit Profile" />
<MenuItem onAction="#onLogout" text="Logout" />
</items>
</MenuButton>
</children>
<padding>
<Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
</padding>
</HBox>
</top>
<left>
<VBox prefWidth="240.0" spacing="6.0" style="-fx-background-color: rgba(0,0,0,0.12);">
<children>
<Button fx:id="dashboardBtn" maxWidth="Infinity" onAction="#openDashboard" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Dashboard" />
<Button fx:id="employeeMgmtBtn" maxWidth="Infinity" onAction="#openEmployeeManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Employees" />
<Button fx:id="payrollGeneratorBtn" maxWidth="Infinity" onAction="#openPayrollGenerator" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Generator" />

<!-- <Button fx:id="reportsBtn" maxWidth="Infinity" onAction="#openReports" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Reports" /> -->
<Button fx:id="importExportBtn" maxWidth="Infinity" onAction="#openImportExport" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Attendance log" />

<Button fx:id="attendanceProcessorBtn" maxWidth="Infinity" onAction="#openAttendanceProcessor" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Attendance Processor" />

<Button fx:id="payrollProcessingBtn" maxWidth="Infinity" onAction="#openPayrollProcessing" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Processing" />

<Button fx:id="historyBtn" maxWidth="Infinity" onAction="#openHistory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="History" />

<!-- <Button fx:id="govRemitBtn" maxWidth="Infinity" onAction="#openGovernmentRemittances" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Dedcutions" /> -->
<Button fx:id="salaryReferenceBtn" maxWidth="Infinity" onAction="#openSalaryReference" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Salary Reference" />

<Button fx:id="loanManagementBtn" maxWidth="Infinity" onAction="#openLoanManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Loan Management" />
<Button fx:id="governmentContributionsBtn" maxWidth="Infinity" onAction="#openGovernmentContributions" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Government Contributions" />
<Button fx:id="systemSettingsBtn" maxWidth="Infinity" onAction="#openSystemSettings" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="System Settings" />
<Button fx:id="securityBtn" maxWidth="Infinity" onAction="#openSecurity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="Security Maintenance" />

<Button fx:id="userManagementBtn" maxWidth="Infinity" onAction="#openUserManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="User Management" />
<Button fx:id="userAccessBtn" maxWidth="Infinity" onAction="#openUserAccess" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 5 16 5 16; -fx-font-weight: bold; -fx-font-size: 15px;" text="User Access" />
</children>
<padding>
<Insets bottom="16.0" left="6.0" right="6.0" top="16.0" />
</padding>
</VBox>
</left>
<center>
<ScrollPane fx:id="contentScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #f5f5f5;">
<content>
<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;">
<children>
<!-- Dashboard Header -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Dashboard Overview" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Label text="Welcome to TPC Payroll Management System" style="-fx-text-fill: #666; -fx-font-size: 18px;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Statistics Cards -->
<HBox spacing="16.0" alignment="CENTER_LEFT">
<children>
<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-min-width: 200;">
<children>
<Label text="Total Employees" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalEmployeesLabel" text="20" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<Label text="Active Staff" style="-fx-font-size: 10px; -fx-text-fill: #4caf50;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-min-width: 200;">
<children>
<Label text="Payroll Processed" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="payrollProcessedLabel" text="15" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
<Label text="This Month" style="-fx-font-size: 10px; -fx-text-fill: #2196f3;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-min-width: 200;">
<children>
<Label text="Average Salary" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="averageSalaryLabel" text="â‚±28,500" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<Label text="Per Employee" style="-fx-font-size: 10px; -fx-text-fill: #4caf50;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>
</children>
</HBox>

<!-- Statistics Chart Section -->
<VBox spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20;">
<children>
<HBox alignment="CENTER_LEFT" spacing="12.0">
<children>
<Label text="Attendance Statistics" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Label text="From:" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
<DatePicker fx:id="chartStartDatePicker" style="-fx-background-color: white; -fx-background-radius: 4;" />
<Label text="To:" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
<DatePicker fx:id="chartEndDatePicker" style="-fx-background-color: white; -fx-background-radius: 4;" />
<Button text="Filter" onAction="#onFilterChart" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 16;" />
</children>
</HBox>
<VBox fx:id="attendanceChartContainer" prefHeight="300.0" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Recent Activities Section -->
<VBox spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20;">
<children>
<Label text="Recent Activities" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<VBox fx:id="recentActivitiesContainer" spacing="8.0">
</VBox>
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>
</children>
<padding>
<Insets top="16.0" right="16.0" bottom="16.0" left="16.0" />
</padding>
</VBox>
</content>
<padding>
<Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
</padding>
</ScrollPane>
</center>
<padding>
<Insets bottom="20.0" left="0.0" right="0.0" top="0.0" />
</padding>
</BorderPane>
</children>
</AnchorPane>
