<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.HistoryController">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Activity History" />
<Region HBox.hgrow="ALWAYS" />
<Button onAction="#onExportHistory" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" text="Export History" />
<Button onAction="#onClearOldRecords" style="-fx-background-color: linear-gradient(to right, #d32f2f, #f44336); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" text="Clear Old Records" />
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</HBox>

<!-- Search and Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Search:" />
<TextField fx:id="searchField" prefWidth="250.0" promptText="Search activity, user, or ID" style="-fx-background-radius: 6;" />
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Activity Type:" />
<ComboBox fx:id="activityTypeFilter" prefWidth="150.0" promptText="All Activities" style="-fx-background-radius: 6;" />
<Button onAction="#onSearch" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />
<Button onAction="#onViewDetails" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="View Details" />
<Button onAction="#onRefresh" style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Refresh" />
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</HBox>

<!-- Activity History Table -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Activity History" />
<TableView fx:id="historyTable" prefHeight="400.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colTimestamp" minWidth="150.0" text="Timestamp" />
<TableColumn fx:id="colUser" minWidth="120.0" text="User" />
<TableColumn fx:id="colActivityType" minWidth="150.0" text="Activity Type" />
<TableColumn fx:id="colDescription" minWidth="300.0" text="Description" />
<TableColumn fx:id="colEntityId" minWidth="100.0" text="Entity ID" />
<TableColumn fx:id="colEntityType" minWidth="120.0" text="Entity Type" />
<TableColumn fx:id="colStatus" minWidth="100.0" text="Status" />
<TableColumn fx:id="colIpAddress" minWidth="120.0" text="IP Address" />
</columns>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</TableView>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>
</children>
<padding>
<Insets bottom="30.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
