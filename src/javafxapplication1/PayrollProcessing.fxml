<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.PayrollProcessingController" spacing="16.0" style="-fx-background-color: #f5f5f5;">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Payroll Processing" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Label text="Pay Period:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<DatePicker fx:id="startDatePicker" promptText="Start Date" style="-fx-background-radius: 6;" />
<Label text="to" style="-fx-text-fill: #666;" />
<DatePicker fx:id="endDatePicker" promptText="End Date" style="-fx-background-radius: 6;" />
<Button text="Generate Payroll" onAction="#onGeneratePayroll" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Search and Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Filter:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<TextField fx:id="searchField" promptText="Search employee name or ID" prefWidth="250.0" style="-fx-background-radius: 6;" />
<Label text="Department:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<ComboBox fx:id="departmentFilter" promptText="All Departments" prefWidth="150.0" style="-fx-background-radius: 6;" />
<Button text="Search" onAction="#onSearch" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button text="View Computation" onAction="#onViewComputation" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button text="Export Payroll" onAction="#onExportPayroll" style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Payroll Table -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Payroll Records" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<TableView fx:id="payrollTable" prefHeight="400.0" style="-fx-background-color: transparent;">
<columns>
<TableColumn fx:id="colEmployeeId" text="Employee ID" prefWidth="100.0" />
<TableColumn fx:id="colEmployeeName" text="Employee Name" prefWidth="200.0" />
<TableColumn fx:id="colDepartment" text="Department" prefWidth="150.0" />
<TableColumn fx:id="colPosition" text="Position" prefWidth="150.0" />
<TableColumn fx:id="colBasicSalary" text="Basic Salary" prefWidth="120.0" />
<TableColumn fx:id="colOvertime" text="Overtime" prefWidth="100.0" />
<TableColumn fx:id="colAllowances" text="Allowances" prefWidth="100.0" />
<TableColumn fx:id="colDeductions" text="Deductions" prefWidth="100.0" />
<TableColumn fx:id="colNetPay" text="Net Pay" prefWidth="120.0" />
<TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
</columns>
</TableView>
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Summary Cards -->
<HBox spacing="16.0" alignment="CENTER_LEFT">
<children>
<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Total Employees" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalEmployeesLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Total Gross Pay" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalGrossLabel" text="₱0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Total Deductions" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="totalDeductionsLabel" text="₱0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16; -fx-min-width: 150;">
<children>
<Label text="Net Payroll" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
<Label fx:id="netPayrollLabel" text="₱0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>
</children>
</HBox>
</children>
<padding>
<Insets top="16.0" right="16.0" bottom="16.0" left="16.0" />
</padding>
</VBox>
