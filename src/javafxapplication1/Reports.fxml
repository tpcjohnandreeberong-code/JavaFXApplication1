</children>
</HBox>

<!-- Report Format Selection -->
<HBox spacing="20.0" alignment="CENTER_LEFT">
<children>
<Label text="Format:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<RadioButton fx:id="pdfFormatRadio" text="PDF" toggleGroup="$formatGroup" selected="true" style="-fx-text-fill: #333;" />
<RadioButton fx:id="excelFormatRadio" text="Excel" toggleGroup="$formatGroup" style="-fx-text-fill: #333;" />
<RadioButton fx:id="csvFormatRadio" text="CSV" toggleGroup="$formatGroup" style="-fx-text-fill: #333;" />
<Region HBox.hgrow="ALWAYS" />
<Button text="Quick Reports" onAction="#onQuickReports" style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
</HBox>
</children>
