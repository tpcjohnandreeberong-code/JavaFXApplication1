<RadioButton fx:id="employeeReportRadio" text="Employee Report" toggleGroup="$reportTypeGroup" style="-fx-text-fill: #333;" />
<RadioButton fx:id="departmentReportRadio" text="Department Report" toggleGroup="$reportTypeGroup" style="-fx-text-fill: #333;" />
