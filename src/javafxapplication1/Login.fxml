<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #2e7d32, #66bb6a);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="javafxapplication1.LoginController">
<children>
<StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
<children>
<VBox alignment="CENTER" maxWidth="360.0" spacing="14.0">
<children>
<VBox alignment="CENTER" spacing="8.0">
<children>
<ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
<image>
<Image url="@images/tpc.png" />
</image>
</ImageView>
<Label style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);" text="TPC PAYROLL MANAGEMENT SYSTEM">
                           <font>
                              <Font size="10.0" />
                           </font></Label>
</children>
</VBox>
<VBox fillWidth="true" maxWidth="360.0" style="-fx-background-color: white; -fx-background-radius: 14; -fx-border-radius: 14; -fx-border-color: rgba(255,255,255,0.35); -fx-border-width: 1;">
<effect>
<DropShadow color="#1b5e20" offsetY="4.0" radius="14.0" spread="0.05" />
</effect>
<children>
<VBox alignment="CENTER_LEFT" fillWidth="true" spacing="12.0">
<children>
<Label style="-fx-text-fill: #1b5e20; -fx-font-size: 18px; -fx-font-weight: bold;" text="Login" />
<TextField fx:id="usernameField" maxWidth="Infinity" promptText="Username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #c8e6c9; -fx-focus-color: #66bb6a; -fx-faint-focus-color: #a5d6a7;" />
<PasswordField fx:id="passwordField" maxWidth="Infinity" promptText="Password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #c8e6c9; -fx-focus-color: #66bb6a; -fx-faint-focus-color: #a5d6a7;" />
<HBox alignment="CENTER_LEFT" spacing="10.0">
<children>
<CheckBox fx:id="rememberMeCheck" text="Remember me" />
<Label fx:id="messageLabel" textFill="#d32f2f" />
</children>
</HBox>
<Button fx:id="loginButton" defaultButton="true" maxWidth="Infinity" onAction="#onLogin" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Login" />
</children>
<padding>
<Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
</padding>
</VBox>
</children>
</VBox>
<Hyperlink onAction="#onForgotPassword" style="-fx-text-fill: white; -fx-underline: true;" text="Forgot password?" />
</children>
<padding>
<Insets bottom="30.0" left="1.0" right="1.0" top="30.0" />
</padding>
</VBox>
</children>
</StackPane>
</children>
</AnchorPane>
