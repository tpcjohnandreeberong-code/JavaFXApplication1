<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.AttendanceProcessorController" spacing="16.0" style="-fx-background-color: #f5f5f5;">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Attendance Processing Engine" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Button fx:id="processAllButton" text="Process All Attendance" onAction="#onProcessAll" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Date Range and Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="From:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<DatePicker fx:id="dateFromPicker" prefWidth="150.0" style="-fx-background-radius: 6;" />
<Label text="To:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<DatePicker fx:id="dateToPicker" prefWidth="150.0" style="-fx-background-radius: 6;" />
<TextField fx:id="searchField" promptText="Search employee name or ID" prefWidth="200.0" style="-fx-background-radius: 6;" />
<Button fx:id="processDateRangeButton" text="Process Selected Period" onAction="#onProcessDateRange" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button fx:id="viewDetailsButton" text="View Details" onAction="#onViewDetails" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Attendance Processing Results Table -->
<TableView fx:id="table" prefHeight="400.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colEmployeeId" text="Employee ID" minWidth="100.0" />
<TableColumn fx:id="colEmployeeName" text="Employee Name" minWidth="180.0" />
<TableColumn fx:id="colProcessDate" text="Process Date" minWidth="120.0" />
<TableColumn fx:id="colLateMinutes" text="Late (mins)" minWidth="90.0" />
<TableColumn fx:id="colUndertimeMinutes" text="Undertime (mins)" minWidth="110.0" />
<TableColumn fx:id="colHoursWorked" text="Hours Worked" minWidth="100.0" />
<TableColumn fx:id="colAbsentDays" text="Absent Days" minWidth="100.0" />
<TableColumn fx:id="colHalfDays" text="Half Days" minWidth="90.0" />
<TableColumn fx:id="colOvertimeHours" text="Overtime (hrs)" minWidth="100.0" />
<TableColumn fx:id="colStatus" text="Status" minWidth="100.0" />
</columns>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</TableView>

</children>
<padding>
<Insets top="16.0" right="16.0" bottom="30.0" left="16.0" />
</padding>
</VBox>