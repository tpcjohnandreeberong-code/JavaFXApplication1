<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.SalaryReferenceController">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Salary Reference Management" />
<Region HBox.hgrow="ALWAYS" />
<Button fx:id="addSalaryRateButton" onAction="#onAdd" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" text="Add Salary Rate" />
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</HBox>

<!-- Search and Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="Search:" />
<TextField fx:id="searchField" prefWidth="250.0" promptText="Search by monthly salary range" style="-fx-background-radius: 6;" />
<Button fx:id="searchButton" onAction="#onSearch" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />
<Button fx:id="editButton" onAction="#onEdit" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Edit" />
<Button fx:id="deleteButton" onAction="#onDelete" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Delete" />
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</HBox>

<!-- Salary Reference Table -->
<TableView fx:id="table" prefHeight="400.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colId" minWidth="80.0" text="ID" />
<TableColumn fx:id="colMonthlySalary" minWidth="150.0" text="Monthly Salary" />
<TableColumn fx:id="colRatePerDay" minWidth="120.0" text="Rate Per Day" />
<TableColumn fx:id="colHalfDayRate" minWidth="120.0" text="Half Day Rate" />
<TableColumn fx:id="colRatePerMinute" minWidth="130.0" text="Rate Per Minute" />
</columns>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</TableView>

</children>
<padding>
<Insets bottom="30.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
