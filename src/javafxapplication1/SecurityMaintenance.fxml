<!-- Security Monitoring Tab -->
<Tab text="Security Monitoring">
<content>
<VBox spacing="16.0" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Security Event Monitoring" />
<HBox spacing="8.0">
<children>
<TextField fx:id="searchField" promptText="Search security events..." style="-fx-background-radius: 6;" />
<ComboBox fx:id="eventTypeFilter" prefWidth="150.0" promptText="All Events" style="-fx-background-radius: 6;" />
<ComboBox fx:id="severityFilter" prefWidth="120.0" promptText="All Severity" style="-fx-background-radius: 6;" />
<Button fx:id="searchButton" onAction="#onSearchSecurityEvents" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />
<Button fx:id="clearLogButton" onAction="#onClearSecurityLog" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Clear Log" />
</children>
</HBox>
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Security Event Log" />
<TableView fx:id="securityEventTable" prefHeight="400.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colTimestamp" prefWidth="150.0" text="Timestamp" />
<TableColumn fx:id="colEventType" prefWidth="120.0" text="Event Type" />
<TableColumn fx:id="colSeverity" prefWidth="100.0" text="Severity" />
<TableColumn fx:id="colUser" prefWidth="120.0" text="User" />
<TableColumn fx:id="colDescription" prefWidth="300.0" text="Description" />
<TableColumn fx:id="colIPAddress" prefWidth="120.0" text="IP Address" />
<TableColumn fx:id="colEventStatus" prefWidth="100.0" text="Status" />
</columns>
</TableView>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>
</children>
</VBox>
</content>
</Tab>

</tabs>
</TabPane>
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

</children>
<padding>
<Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
