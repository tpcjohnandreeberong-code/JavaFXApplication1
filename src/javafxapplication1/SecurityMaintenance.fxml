<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.SecurityMaintenanceController">
<children>
<!-- Header Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<HBox alignment="CENTER_LEFT" spacing="16.0">
<children>
<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Security Maintenance" />
<Region HBox.hgrow="ALWAYS" />
<Button fx:id="refreshButton" onAction="#onRefresh" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Refresh" />
<Button fx:id="exportLogButton" onAction="#onExportSecurityLog" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Export Log" />
</children>
</HBox>
<Label style="-fx-text-fill: #666; -fx-font-size: 14px;" text="Manage system security policies, user access controls, and security monitoring" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</VBox>

<!-- Security Settings Tabs -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<TabPane fx:id="securityTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
<tabs>
