<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.EmployeeController" spacing="16.0" style="-fx-background-color: #f5f5f5;">
<children>
<!-- Header Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Employee Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
<Region HBox.hgrow="ALWAYS" />
<Button fx:id="addEmployeeButton" text="Add Employee" onAction="#onAdd" style="-fx-background-color: linear-gradient(to right, #2e7d32, #43a047); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Search and Filter Section -->
<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label text="Search:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
<TextField fx:id="searchField" promptText="Search employee name or ID" prefWidth="250.0" style="-fx-background-radius: 6;" />
<Button text="Search" onAction="#onSearch" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button fx:id="editEmployeeButton" text="Edit" onAction="#onEdit" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
<Button fx:id="deleteEmployeeButton" text="Delete" onAction="#onDelete" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
</children>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</HBox>

<!-- Employee Table -->
<TableView fx:id="table" prefHeight="400.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colId" text="ID" minWidth="120.0" />
<TableColumn fx:id="colAccountNumber" text="Account Number" minWidth="150.0" />
<TableColumn fx:id="colName" text="Full Name" minWidth="200.0" />
<TableColumn fx:id="colPosition" text="Position" minWidth="150.0" />
<TableColumn fx:id="colSalary" text="Salary" minWidth="120.0" />
</columns>
<effect>
<DropShadow radius="4.0" color="#00000020" offsetY="2.0" />
</effect>
</TableView>

</children>
<padding>
<Insets top="16.0" right="16.0" bottom="30.0" left="16.0" />
</padding>
</VBox>


