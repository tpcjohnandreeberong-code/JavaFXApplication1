<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.GovernmentRemittancesController">
<children>
<!-- Header Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<HBox alignment="CENTER_LEFT" spacing="16.0">
<children>
<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Government Remittances" />
<Region HBox.hgrow="ALWAYS" />
<Button onAction="#onRefresh" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Refresh" />
<Button onAction="#onGenerateReport" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Generate Report" />
<Button onAction="#onExportRemittances" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Export Data" />
</children>
</HBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

<!-- Deduction Management Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Deduction Management" />
<HBox spacing="8.0">
<children>
<TextField fx:id="searchField" promptText="Search deductions..." style="-fx-background-radius: 6;" />
<ComboBox fx:id="typeFilter" prefWidth="150.0" promptText="All Types" style="-fx-background-radius: 6;" />
<ComboBox fx:id="statusFilter" prefWidth="120.0" promptText="All Status" style="-fx-background-radius: 6;" />
<Button onAction="#onSearch" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />
<Button onAction="#onAddDeduction" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Add Deduction" />
<Button onAction="#onEditDeduction" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Edit" />
<Button onAction="#onDeleteDeduction" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Delete" />
</children>
</HBox>
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Deduction Types" />
<TableView fx:id="deductionTable" prefHeight="400.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
<TableColumn fx:id="colCode" prefWidth="100.0" text="Code" />
<TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
<TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
<TableColumn fx:id="colBasis" prefWidth="80.0" text="Basis" />
<TableColumn fx:id="colRatePercent" prefWidth="100.0" text="Rate %" />
<TableColumn fx:id="colFixedAmount" prefWidth="120.0" text="Fixed Amount" />
<TableColumn fx:id="colMinSalary" prefWidth="100.0" text="Min Salary" />
<TableColumn fx:id="colMaxSalary" prefWidth="100.0" text="Max Salary" />
<TableColumn fx:id="colEmployeeShare" prefWidth="120.0" text="Employee Share" />
<TableColumn fx:id="colEmployerShare" prefWidth="120.0" text="Employer Share" />
<TableColumn fx:id="colBaseTax" prefWidth="100.0" text="Base Tax" />
<TableColumn fx:id="colExcessOver" prefWidth="120.0" text="Excess Over" />
<TableColumn fx:id="colEffectiveEmployeePercent" prefWidth="150.0" text="Eff. Employee %" />
<TableColumn fx:id="colEffectiveEmployerPercent" prefWidth="150.0" text="Eff. Employer %" />
<TableColumn fx:id="colEffectiveTotalPercent" prefWidth="150.0" text="Eff. Total %" />
</columns>
</TableView>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

</children>
<padding>
<Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
