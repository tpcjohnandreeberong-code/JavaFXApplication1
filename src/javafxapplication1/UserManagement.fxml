<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.UserManagementController">
<children>
<!-- Header Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<HBox alignment="CENTER_LEFT" spacing="16.0">
<children>
<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="User Management" />
<Region HBox.hgrow="ALWAYS" />
<Button onAction="#onRefresh" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Refresh" />
<Button onAction="#onExportUsers" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Export Users" />
</children>
</HBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

<!-- Search and Filter Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="Search &amp; Filter Users" />
<HBox spacing="8.0">
<children>
<TextField fx:id="userSearchField" promptText="Search users..." style="-fx-background-radius: 6;" HBox.hgrow="ALWAYS" />
<ComboBox fx:id="roleFilter" prefWidth="150.0" promptText="All Roles" style="-fx-background-radius: 6;" />
<ComboBox fx:id="statusFilter" prefWidth="120.0" promptText="All Status" style="-fx-background-radius: 6;" />
<Button onAction="#onSearchUsers" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Search" />
<Button onAction="#onClearFilters" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Clear" />
</children>
</HBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

<!-- Action Buttons Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;">
<children>
<Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="User Actions" />
<HBox spacing="8.0">
<children>
<Button onAction="#onAddUser" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Add User" />
<Button onAction="#onEditUser" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Edit User" />
<Button onAction="#onDeleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Delete User" />
<Button onAction="#onAssignRole" style="-fx-background-color: #9c27b0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Assign Role" />
<Button onAction="#onResetPassword" style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Reset Password" />
<Button onAction="#onToggleStatus" style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Toggle Status" />
</children>
</HBox>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

<!-- Users Table Section -->
<VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 16;" VBox.vgrow="ALWAYS">
<children>
<Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;" text="System Users" />
<TableView fx:id="userTable" prefHeight="400.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
<columns>
<TableColumn fx:id="colUserId" prefWidth="60.0" text="ID" />
<TableColumn fx:id="colUsername" prefWidth="120.0" text="Username" />
<TableColumn fx:id="colFullName" prefWidth="200.0" text="Full Name" />
<TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
<TableColumn fx:id="colUserRole" prefWidth="120.0" text="Role" />
<TableColumn fx:id="colUserStatus" prefWidth="100.0" text="Status" />
<TableColumn fx:id="colLastLogin" prefWidth="120.0" text="Last Login" />
<TableColumn fx:id="colCreatedDate" prefWidth="120.0" text="Created" />
</columns>
</TableView>
</children>
<effect>
<DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
</effect>
</VBox>

</children>
<padding>
<Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
</padding>
</VBox>
